@model IEnumerable<Model.EF.ProductCategory>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section header{
    Danh mục sản phẩm.
}
@section jsFooter{
    <script src="~/assets/admin/js/controller/productCategoryController.js"></script>
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Thông tin danh mục sản phẩm.
            </div>
            <div class="panel-body">
                <div class="row form-group">
                    <div class="col-lg-12">
                        <div class="col-md-4">
                            <input type="text" value="" class="form-control" name="searchString" />
                        </div>
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-success">Tìm kiếm</button>
                            <button type="submit" id="btnAddNew" class="btn btn-primary">Thêm mới</button>
                        </div>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Tên danh mục</th>
                                <th>Tiêu đề</th>
                                <th>Trạng thái</th>
                                <th>Chức năng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.MetaTitle</td>
                                    <td>@item.Status</td>
                                    <td>
                                        <a href="/Admin/ProductCategory/Edit/@item.ID">Sửa</a>
                                        |
                                        <a href="#">Xóa</a>
                                        @*@Ajax.ActionLink("Xóa", "Delete", new { @id = item.ID }, new AjaxOptions
                                            {
                                                Confirm = "Bạn chắc chắn muốn xóa bản ghi này?",
                                                OnComplete = "$('#row_" + @item.ID + "').remove()",
                                                HttpMethod = "Delete"
                                            })*@
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@RenderPage("_createUpdateProductCategory.cshtml")

