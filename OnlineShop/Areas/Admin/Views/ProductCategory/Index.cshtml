@model IEnumerable<Model.EF.ProductCategory>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section header{
    Danh mục sản phẩm.
}
@section jsFooter{
    <script src="~/assets/admin/js/plugins/jquery.twbsPagination.min.js"></script>
    <script src="~/assets/admin/js/controller/productCategoryController.js"></script>
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Thông tin danh mục sản phẩm.
            </div>
            <div class="panel-body">
                <div class="row form-group">
                    <div class="col-lg-12">
                        <div class="col-md-4">
                            <input type="text" value="" class="form-control" name="searchString" />
                        </div>
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-success">Tìm kiếm</button>
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalAddUpdate" onclick="resetForm()">Thêm mới</button>
                        </div>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <td><b>Tên danh mục</b></td>
                                <td><b>Tiêu đề</b></td>
                                <td><b>Người tạo</b></td>
                                <td><b>Trạng thái</b></td>
                                <td><b>Chức năng</b></td>
                            </tr>
                        </thead>
                        <tbody id="tbl-productcategory"></tbody>
                    </table>
                    <div id="pagination" class="pagination">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@RenderPage("_createUpdateProductCategory.cshtml")