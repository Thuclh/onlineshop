@model PagedList.IPagedList<Model.EF.Content>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}
@section header{
    Tin tức.
}
@section jsFooter{

    <script src="~/assets/admin/js/controller/contentController.js"></script>
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                @using (Html.BeginForm("Index", "Content", FormMethod.Get))
                {
                    <div class="row form-group">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <input type="text" value="@ViewBag.SearchString" class="form-control" name="searchString" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-success">Tìm kiếm</button>
                                <a href="/Admin/Content/Create" type="submit" class="btn btn-primary">Thêm mới</a>
                            </div>
                        </div>
                    </div>
                }
                <div class="table table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Tên tin tức</th>
                                <th>Tiêu đề</th>
                                <th>Mô tả</th>
                                <th>Người tạo</th>
                                <th>Người sửa</th>
                                <th>Trạng thái</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.MetaTitle</td>
                                    <td>@item.Description</td>
                                    <td>@item.CreatedBy</td>
                                    <td>@item.ModifieBy</td>
                                    @*<td>@item.Status</td>*@
                                    <td><a href="#" class="btn-active" data-id="@item.ID">@(item.Status ? "Kích hoạt" : "Khóa")</a></td>
                                    <td>
                                        <a href="~/Admin/Content/Edit/@item.ID" class="btn btn-primary"><i class="glyphicon glyphicon-pencil"></i></a>
                                        <a href="~/Admin/Content/Delete/@item.ID" class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model,page=>Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                </div>
            </div>
        </div>
    </div>
</div>